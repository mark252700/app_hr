
<%= simple_form_for(@jb_performed) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :job_performed %>
    <%= f.input :job_done %>
    <%= f.input :job_hr %>
    <%= f.input :job_min %>
    <%= f.input :job_current %>
    <%= f.input :job_reason %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
