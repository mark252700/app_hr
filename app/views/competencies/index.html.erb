<%= content_tag :h1, "List of Competencies" %>


<div class="text-end mb-3">
  <%= link_to new_competency_path, class: 'btn btn-primary' do %>
    New Competency
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Competencies</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @competencies.each do |competency| %>
        <tr>

        <th scope="row"><%= competency.id %></th>
        <td><%= competency.competencies %></td>
    
          <td>
            <%= link_to 'View', competency, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_competency_path(competency), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", competency, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
