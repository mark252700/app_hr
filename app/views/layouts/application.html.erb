<!DOCTYPE html>
<html>
  <head>
    <title>AppHr</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%# <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %> 

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- this is the cdn for sweet alert -->
    <%# <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %> 

   <%# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flowbite@2.2.0/dist/flowbite.css"> %>


   <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" %>


  </head>

  <body class="d-flex flex-column min-vh-100 bg-light">
    <% if user_signed_in? %>
      <%= render 'layouts/navbar' %>
      
    <% end %>
    <%= render partial: 'shared/notofications' %>
<br>
    <div class="container flex-grow-1">
      <div class="overflow-auto"> <!-- Add this div for scrollable content -->

      
        <%= yield %>
      
      </div>
      <%= turbo_frame_tag "remote_modal", target: "_top" %>
      <%= turbo_frame_tag "user_modal", target: "_top" %>
       <%= turbo_frame_tag "show_user", target: "_top" %>
       <%= turbo_frame_tag "position_modal", target: "_top" %>
    </div>


    <footer class="bg-dark text-white text-center py-3">
      <div class="container">
        <%= render 'layouts/footer' %>
      </div>
    </footer>
  
   
   
    <%# <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.0.0/flowbite.min.js"></script> %>
   <%= javascript_include_tag 'application' %>

  

  </body>

 

</html>
