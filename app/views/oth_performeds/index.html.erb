<%= content_tag :h1, "List of Oth Performeds" %>


<div class="text-end mb-3">
  <%= link_to new_oth_performed_path, class: 'btn btn-primary' do %>
    New Oth Performed
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Job Performed</th>
            <th>Job Done</th>
            <th>Job Hr</th>
            <th>Job Min</th>
            <th>Integer</th>
            <th>Job Current</th>
            <th>Job Reason</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @oth_performeds.each do |oth_performed| %>
        <tr>

        <th scope="row"><%= oth_performed.id %></th>
        <td><%= oth_performed.job_performed %></td>
        <td><%= oth_performed.job_done %></td>
        <td><%= oth_performed.job_hr %></td>
        <td><%= oth_performed.job_min %></td>
        <td><%= oth_performed.integer %></td>
        <td><%= oth_performed.job_current %></td>
        <td><%= oth_performed.job_reason %></td>
    
          <td>
            <%= link_to 'View', oth_performed, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_oth_performed_path(oth_performed), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", oth_performed, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
