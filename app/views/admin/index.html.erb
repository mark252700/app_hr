<style>
    .arrow-icon {
        margin-left: 5px;
        font-size: 12px;
        transition: transform 0.3s;
    }

    .arrow-icon.rotate-up {
        transform: rotate(360deg);
    }

        .table-container {
        max-height: 450px; /* Adjust the height as needed */
        overflow-y: auto;
      }
</style>


<div class="container-fluid">
<h1>Employee List</h1>

  <div class="d-flex justify-content-start mb-2">  <!-- Align to the right -->

    <div class = "col-8">
    <div class="input-group input-group-sm " style="width: 120px;">
       <%= link_to download_excel_path(format: :xlsx), class: "btn btn-success", id: "excelButton" do %>
        <i class="fas fa-file-excel fa-lg">&nbsp; Excel</i>
       <% end %>
    </div>
     </div>



    <!-- Division Dropdown -->
    <div class="input-group input-group-sm mr-2" style="width: 120px;">
      <select class="form-control" id="divisionFilter" style="width: 120px;"> <!-- Adjust the width as needed -->
        <option value="">All Divisions</option>
        <!-- Add options for each division -->
        <option value="Life Operations">Life Operations</option>
        <option value="Nonlife Operations">Nonlife Operations </option>
        <option value="Admin and Finance">Admin and Finance</option>
        <option value="Sales and Marketing">Sales and Marketing</option>
        <option value="Support">Support</option>
        <option value="CDO Branch">CDO Branch</option>
        <option value="Ilo-ilo Branch">Ilo-ilo Branch</option>
        <option value="Davao Branch">Davao Branch</option>
        <!-- Add more options as needed -->
      </select>
    </div>

    <!-- Search Bar -->
    <div class="input-group input-group-sm" style="width: 350px;"> <!-- Adjust the width as needed -->
      <input type="text" class="form-control" placeholder="Search..." id="searchInput">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="searchButton">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>
  </div>

<div class="table-container">
<table class="table table-hover table-lg border">
  <thead>
    <tr>
      <th>Employee No.</th>
      <th>Email</th>
      <th>Full Name</th>
      <th>Role</th>
      <th>Submitted</th>
       <th>Division</th>
      <th>Department</th>
      <th id="dateCreatedColumn">Date Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <!-- Only display the row if the user is not an Admin and not archived -->
    <% unless user.role? || user.archive %>
      <tr class="user-row">
        <td><%= user.emp_detail&.emp_id %></td>
        <td><%= user.email %></td>
        <td><%= "#{user.emp_detail&.firstname} #{user.emp_detail&.middlename} #{user.emp_detail&.lastname}".squish %></td>
        <td>Client</td>
        <td><%= user.submitted ? "Yes" : "No" %></td>
        <td><%= user.emp_detail&.division %></td>
        <td><%= user.emp_detail&.department %></td>
        <td><%= user.created_at.strftime('%m/%d/%Y %I:%M %p') %></td>
        <td>
         <% if user.emp_detail&.emp_id.present? && user.submitted %>
  <%= link_to show_user_admin_user_management_path(user), class: "btn btn-info btn-sm", data: { turbo_frame: "show_user" } do %>
    <i class="fas fa-eye"></i>
  <% end %>
<% end %>


          <%= link_to edit_admin_user_management_path(user), class: "btn btn-warning btn-sm", data: { turbo_frame: "user_modal" } do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= link_to archieve_user_admin_user_management_path(user), method: :patch, onclick: 'return confirm("Are you sure you want to delete this user?")', class: "btn btn-danger btn-sm" do %>
            <i class="fas fa-trash"></i>
          <% end %>

          <%= link_to approve_user_admin_user_management_path(user), method: :patch, class: "btn btn-success btn-sm", onclick: "return showApprovalConfirmation();" do %>
            <i class="fas fa-check"></i>
          <% end unless user.approved? %>

          <%= link_to unsubmitted_user_admin_user_management_path(user), method: :patch, class: "text-danger btn-sm", onclick: "return showApprovalConfirmation();" do %>
          <i class="fas fa-undo"></i>
         <% end if user.submitted? %>


          <% if user.emp_detail&.emp_id.present? && user.submitted %>
            <%= link_to pdfadmin_path(user), class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-file-pdf"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>

</table>
</div>




