<div id="<%= dom_id other_taskperformance %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Task notdone:</strong>
    <%= other_taskperformance.task_notdone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Task reason:</strong>
    <%= other_taskperformance.task_reason %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Task impact:</strong>
    <%= other_taskperformance.task_impact %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this other taskperformance", other_taskperformance, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this other taskperformance", edit_other_taskperformance_path(other_taskperformance), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
