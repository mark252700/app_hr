                    </div>
                  </td>
                  <td>
                    <div class="mb-3">
                      <%= nrel.input :train_benefit, label: 'Benefits of the training in your current role', input_html: { class: 'form-control' } %>
                    </div>
                  </td>
                  <td>
                    <div class="mb-3">
                      <br>
                      <!-- Add remove button for each row -->
