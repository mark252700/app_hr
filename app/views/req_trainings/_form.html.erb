              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>



    <br>
  <div class="form-actions">
     <%= f.button :submit, 'Save', name: 'save_button', class: 'btn btn-success' %>
   
    <% if (oth_performed = current_user.oth_performed).present? %>
  <%= link_to 'Previous', edit_oth_performed_path(oth_performed), class: 'btn btn-secondary',id: 'float' %>
<% end %>
  </div>
<% end %>

<script>
document.getElementById('addRowBtn').addEventListener('click', function() {
  var tbody = document.getElementById('formContainer');
  var rowCount = tbody.getElementsByTagName('tr').length;

  var newRow = document.createElement('tr');
  newRow.innerHTML = `
    <td><br>
      <div class="mb-3">
        <label>Type of Training</label>
        <input type="text" name="req_training[nested_trainings_attributes][${rowCount}][train_type]" class="form-control" value=""> </div>
    </td>
     <td>
      <div class="mb-3">
        <label>Benefits of the training in your current role</label>
        <input type="text" name="req_training[nested_trainings_attributes][${rowCount}][train_benefit]" class="form-control" value=""> </div>
    </td> 
    <td><br>
      <div class="mb-3">
        <label>Supervisor Name</label>
        <input type="text" name="req_training[nested_trainings_attributes][${rowCount}][sup_name]" class="form-control" value=""> </div>
    </td> 
    <td><br>
      <div class="mb-3">
        <label>Supervisor Title</label>
        <input type="text" name="req_training[nested_trainings_attributes][${rowCount}][sup_title]" class="form-control" value=""> </div>
    </td>
    <td><br><br>
      <div class="mb-3">
        <button type="button" class="btn btn-danger remove-row">Remove</button>
      </div>
    </td>
  `;

  tbody.appendChild(newRow);
});

// Add event listener to handle remove button clicks
document.getElementById('formContainer').addEventListener('click', function(e) {
  if (e.target && e.target.className == 'btn btn-danger remove-row') {
    var row = e.target.closest('tr');
    row.parentNode.removeChild(row);
  }
});

