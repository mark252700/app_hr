
<%= simple_form_for(@oth_position) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :pos_title %>
    <%= f.input :pos_yr %>
    <%= f.input :pos_month %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
