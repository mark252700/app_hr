<%= content_tag :h1, "List of Nested Othperformes" %>


<div class="text-end mb-3">
  <%= link_to new_nested_othperforme_path, class: 'btn btn-primary' do %>
    New Nested Othperforme
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Job Performed</th>
            <th>Job Done</th>
            <th>Job Hr</th>
            <th>Job Min</th>
            <th>Job Current</th>
            <th>Job Reason</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @nested_othperformes.each do |nested_othperforme| %>
        <tr>

        <th scope="row"><%= nested_othperforme.id %></th>
        <td><%= nested_othperforme.job_performed %></td>
        <td><%= nested_othperforme.job_done %></td>
        <td><%= nested_othperforme.job_hr %></td>
        <td><%= nested_othperforme.job_min %></td>
        <td><%= nested_othperforme.job_current %></td>
        <td><%= nested_othperforme.job_reason %></td>
    
          <td>
            <%= link_to 'View', nested_othperforme, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_nested_othperforme_path(nested_othperforme), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", nested_othperforme, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
