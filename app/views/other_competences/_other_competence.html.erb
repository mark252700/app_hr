<div id="<%= dom_id other_competence %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Competencies:</strong>
    <%= other_competence.competencies %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this other competence", other_competence, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this other competence", edit_other_competence_path(other_competence), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
